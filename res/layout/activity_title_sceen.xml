        android:id="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_button"
        android:id="@+id/button3"
        android:layout_gravity="right" />
</LinearLayout>

    <LinearLayout
